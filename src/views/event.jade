extends header

block view
	.container
		.row
			.col-md-6
				img.img-responsive(src='#{ event.image || "media/noimage.jpg"}')
			.col-md-6
				h1 #{event.title}
				.panel.panel-primary
					.panel-heading
						h3.panel-title What?
					.panel-body
						p(contenteditable='true') #{event.description}
				.panel.panel-primary
					.panel-heading
						h3.panel-title Where?
					.panel-body
						p #{event.city + ", " + event.location}
				.panel.panel-primary
					.panel-heading
						h3.panel-title When?
					.panel-body
						p #{event.date + " at " + event.hour}